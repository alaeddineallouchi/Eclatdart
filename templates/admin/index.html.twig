{% extends 'base2.html.twig' %}
{% block body %}
    <div id="layoutSidenav">
        <body class="sb-nav-fixed">
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Admin-Dashboard</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>

                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Events-DataTable
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>description</th>
                                    <th>date_debut </th>
                                    <th>date_fin</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for event in events %}
                                    <tr>



                                            <td>{{ event.title }}</td>
                                            <td>{{ event.description }}</td>
                                            <td> {{ event.datedebut ? event.datedebut|date('Y-m-d') : '' }}</td>
                                            <td>{{ event.datefin ? event.datefin|date('Y-m-d') : '' }}</td>



                                            <a href="{{ path('app_event_index', {'id': event.id}) }}">show            </a>
                                            <a href="{{ path('app_event_edit', {'id': event.id})  }}">edit             </a>

                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">no events found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a href="{{ path('app_event_new') }}">ajouter evennement</a>
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-success" onclick="window.location.href='{{ path('app_eventPDF') }}'">Print</button>
                            </div>


                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>


{% endblock %}